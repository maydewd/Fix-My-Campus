<h1 class="text-center" id="school-name">Select a School</h1>
<div class="flex-container">
    <% @schools.each do |school| %>
        <div class="flex-school" style="background-color:#<%= school.background_color %>;">
            <%= link_to school_path(school) do %>
                <span style="color:#<%= school.text_color %>;"><%= school.name %></span>
            <% end %>
        </div>
    <% end %>
</div>
<h5 class="text-center">Is your school not listed here? Tell your administrators to contact us to join the platform!</h5>
