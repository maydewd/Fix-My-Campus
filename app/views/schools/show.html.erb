<div class="row">
    <div class="col-lg-9">
      <h1><%= @school.name %></h1>
        <div id="posts">
            <% @posts.each do |post| %>
                <div class="panel panel-info">
                    <div class="panel-body">
                        <h6 class="text-muted"><%= post.legacy? ? post.legacy_user_name : post.user.name %> - <%= post.created_at.in_time_zone("Eastern Time (US & Canada)").strftime('%a, %d %b %Y %l:%M %p') %></h6>
                        <p class="lead"><%= post.message %></p>
                    </div>
                    <div class="panel-footer">
                        <button type="button" class="btn btn-default">
                          <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> I Agree! <span class="badge"><%= post.legacy_numlikes %></span>
                        </button>
                        <button type="button" class="btn btn-default pull-right">
                          See Comments <span class="badge">999</span>
                        </button>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    
    <div class="col-lg-3">
        <div class="well sidebar-nav">
            <ul class="nav nav-list">
                <li class="nav-header">School Stats</li>
                <li><%= link_to "Link1", "/path1"  %></li>
                <li><%= link_to "Link2", "/path2"  %></li>
                <li><%= link_to "Link3", "/path3"  %></li>
            </ul>
            <form class="" role="search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="query" id="query" value="<%= params[:query] %>">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>
        </div><!--/.well -->
    </div><!--/.col-->
</div><!--/row-->

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>