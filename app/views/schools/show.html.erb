<div class="row">
    <div class="col-lg-9">
      <h1><%= @school.name %></h1>
        <div id="posts">
            <% @posts.each do |post| %>
                <div class="panel panel-info panel-<%= status_to_suffix(post.status) %>">
                    <div class="panel-body">
                        <div class="post-header">
                            <h6 class="text-muted post-user-info"><%= post.legacy? ? post.legacy_user_name : post.user.name %> - <%= post.created_at.in_time_zone("Eastern Time (US & Canada)").strftime('%d %b %Y %l:%M %p') %></h6>
                            <span class="label label-<%= status_to_suffix(post.status) %> lb-md post-user-info pull-right"><%= post.status.humanize %></span>
                        </div>
                        <p class="lead"><%= post.message %></p>
                    </div>
                    <div class="panel-footer">
                        <button type="button" class="btn btn-default">
                          <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> I Agree! <span class="badge"><%= post.legacy_numlikes %></span>
                        </button>
                        <button type="button" class="btn btn-default pull-right">
                          See Comments <span class="badge">999</span>
                        </button>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    
    <div class="col-lg-3">
        <div class="well sidebar-nav">
            <%= link_to '<span class="glyphicon glyphicon-stats" aria-hidden="true"></span>  School Stats'.html_safe, '#', :class => "lead" %>
            <hr />
            <h6>Sort Posts</h6>
            <ul class="nav nav-list">
                <li><%= link_to '<span class="glyphicon glyphicon-flash" aria-hidden="true"></span> Newest'.html_safe, '#' %></li>
                <li><%= link_to '<span class="glyphicon glyphicon-fire" aria-hidden="true"></span> Trending'.html_safe, '#' %></li>
                <li><%= link_to '<span class="glyphicon glyphicon-heart" aria-hidden="true"></span> Top'.html_safe, '#' %></li>
            </ul>
            <hr />
            <h6>Filter Posts</h6>
            <form class="" role="search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="query" id="query" value="<%= params[:query] %>">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
                <div class="input-group">
                    <%= hidden_field_tag 'statuses[]' %>
                    <% Post.statuses.each do |status, value| %>
                        <label class="checkbox spacer text-<%= status_to_suffix(status) %>" onclick="this.form.submit()">
                            <%= check_box_tag 'statuses[]', status, params_to_status_checked(params[:statuses], status) %>
                            <%= status.humanize %>
                        </label>
                    <% end %>
                </div>
            </form>
        </div><!--/.well -->
    </div><!--/.col-->
</div><!--/row-->

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>