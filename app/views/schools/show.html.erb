<div class="row">
    <div class="col-lg-9">
        <div class="row">
            <div class="col-md-9">
                <h1 id='school-name'><%= @school.name %></h1>
            </div>
            <div class="col-md-3">
                <%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Post'.html_safe, new_post_path, class: "btn btn-success pull-right new-post #{user_signed_in? && current_user.school == @school ? '' : 'disabled'}" %>
            </div>
        </div>
        <div id="posts">
            <%= render partial: 'posts/post', collection: @posts %>
        </div>
    </div>
    
    <div class="col-lg-3">
        <div class="well sidebar-nav">
            <%= link_to '<span class="glyphicon glyphicon-stats" aria-hidden="true"></span>  School Stats'.html_safe, '#', :class => "lead" %>
            <hr />
            <h6>Sort Posts</h6>
            <ul class="nav nav-list">
                <li><%= link_to '<span class="glyphicon glyphicon-flash" aria-hidden="true"></span> Newest'.html_safe, '#' %></li>
                <li><%= link_to '<span class="glyphicon glyphicon-fire" aria-hidden="true"></span> Trending'.html_safe, '#' %></li>
                <li><%= link_to '<span class="glyphicon glyphicon-heart" aria-hidden="true"></span> Top'.html_safe, '#' %></li>
            </ul>
            <hr />
            <h6>Filter Posts</h6>
            <form class="" role="search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="query" id="query" value="<%= params[:query] %>">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
                <div class="input-group">
                    <%= hidden_field_tag 'statuses[]' %>
                    <% Post.statuses.each do |status, value| %>
                        <label class="checkbox spacer text-<%= status_to_suffix(status) %>" onclick="this.form.submit()">
                            <%= check_box_tag 'statuses[]', status, params_to_status_checked(params[:statuses], status) %>
                            <%= status.humanize %>
                        </label>
                    <% end %>
                </div>
            </form>
        </div><!--/.well -->
    </div><!--/.col-->
</div><!--/row-->

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>